<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:layout_marginStart="-6dp"
        android:layout_marginLeft="-6dp"
        android:background="#81AFA1">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImageView"
            android:layout_marginStart="170dp"
            android:layout_marginTop="-70dp"
            android:text="페어리"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginStart="170dp"
            android:layout_marginTop="8dp"
            android:text="fairy@naver.com"
            android:textSize="14sp" />

        <View
            android:layout_width="383dp"
            android:layout_height="2dp"
            android:layout_below="@id/nameTextView"
            android:layout_marginStart="50dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="16dp"
            android:background="#D5E0DD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginStart="65dp"
            android:layout_marginTop="100dp"
            android:text="페어리님이 요정이 된 횟수는 10회 입니다!"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/introdutionImageView"
            android:layout_width="403dp"
            android:layout_height="131dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/introdution"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginStart="70dp"
            android:layout_marginTop="180dp"
            android:text="저는 하루의 일상을 기억하는 페어리입니다! \n매일 다른 옷을 입으며 일상을 기록하고 있어요 :-)"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="460dp"
        android:text="테마 변경"
        android:textSize="15sp"
        android:textColor="#292929"
        android:textStyle="bold"/>

        <ImageView
            android:id="@+id/rubyImageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="500dp"
            android:src="@drawable/rubybutton"/>

        <ImageView
            android:id="@+id/bellImageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="200dp"
            android:layout_marginTop="500dp"
            android:src="@drawable/bellbutton"/>

        <ImageView
            android:id="@+id/tinkerbellImageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="620dp"
            android:src="@drawable/tinkerbellbutton"/>

    <ImageView
        android:id="@+id/elfImageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="200dp"
        android:layout_marginTop="620dp"
        android:src="@drawable/elfbutton" />


</RelativeLayout>