<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/white"
    tools:context="com.cookandroid.fairy.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20sp"
        android:textFontWeight="900"
        android:textColor="@android:color/black"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#31BF94"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        />


    <!-- 이름 입력 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/nameSEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="이름을 입력하세요."
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#31BF94"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"/>

    <!--생년월일  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <!-- 년도 스피너 -->
        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spinner_background"
            android:dropDownHeight="20dp"

            />

        <!-- 월 스피너 -->
        <Spinner
            android:id="@+id/monthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/spinner_background"
            android:dropDownHeight="20dp"
/>

        <!-- 일 스피너 -->
        <Spinner
            android:id="@+id/daySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/spinner_background"
            android:dropDownHeight="20dp"
/>
    </LinearLayout>
    <!-- 아이디 입력 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/idSEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="아이디를 입력하세요."
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#31BF94"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"/>

    <!--비밀번호 입력창 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/passwordSEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="12dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#31BF94"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"/>

    <!-- 비밀번호 확인 입력창 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/confirmSPasswordEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="12dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#31BF94"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"/>

    <!-- 가입하기 버튼 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    <Button
        android:id="@+id/signupSButton"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#31BF94"
        android:text="가입하기"
        android:layout_centerHorizontal="true"
        />
    </LinearLayout>
</LinearLayout>